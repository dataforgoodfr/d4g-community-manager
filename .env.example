# Mattermost
# Base URL of your Mattermost instance
MATTERMOST_URL=https://your.mattermost.instance.com
# The ID of the Mattermost team where new channels should be created
MATTERMOST_TEAM_ID=YOUR_MATTERMOST_TEAM_ID
# Mattermost Bot Token. This token is used for:
# 1. Connecting to the Mattermost WebSocket API (for receiving messages).
# 2. Posting messages back to channels as the bot.
# 3. Performing API actions like channel creation (ensure this bot account has necessary permissions).
BOT_TOKEN=YOUR_MATTERMOST_BOT_ACCOUNT_TOKEN
# The username of your bot in Mattermost (without the '@')
BOT_NAME=marty
# User credentials for creating boards (Focalboard plugin)
MATTERMOST_LOGIN_ID=your_mattermost_login_email_or_username
MATTERMOST_PASSWORD=your_mattermost_password
# The ID of the board template to duplicate for new projects
PROJECT_BOARD_TEMPLATE_ID=your_project_board_template_id

# Authentik
# Base URL of your Authentik instance
AUTHENTIK_URL=https://your.authentik.instance.com
# Authentik API Token
AUTHENTIK_TOKEN=YOUR_AUTHENTIK_API_TOKEN

# Outline
# Base URL of your Outline instance (e.g., https://app.getoutline.com or your self-hosted URL)
OUTLINE_URL=https://your.outline.instance.com
# Outline API Token
OUTLINE_TOKEN=YOUR_OUTLINE_API_TOKEN

# Brevo
# Base URL of your Brevo instance
BREVO_API_URL=https://api.brevo.com/v3
# Brevo API Key
BREVO_API_KEY=YOUR_BREVO_API_KEY
# Brevo List ID for Authentik users sync
BREVO_AUTHENTIK_USERS_LIST_ID=YOUR_BREVO_LIST_ID_FOR_AUTHENTIK_USERS
# Default sender for emails sent by Marty via Brevo
BREVO_DEFAULT_SENDER_EMAIL=marty@example.com
BREVO_DEFAULT_SENDER_NAME=Marty Bot

# General Settings
DEBUG=false # Set to true for verbose logging, including WebSocket messages

# Note: Ensure there are no trailing spaces on any lines.
# Copy this file to .env and fill in your actual values.
# DO NOT commit your actual .env file to version control.

# NoCoDB
# Base URL of your NoCoDB instance
NOCODB_URL=https://your.nocodb.instance.com
# NoCoDB API Token (X-API-KEY)
NOCODB_TOKEN=YOUR_NOCODB_API_TOKEN

# Vaultwarden (Bitwarden CLI 'bw')
# Organization ID for Vaultwarden
VAULTWARDEN_ORGANIZATION_ID=YOUR_VAULTWARDEN_ORGANIZATION_ID
# Optional: Vaultwarden server URL if self-hosted and not globally configured for 'bw'
VAULTWARDEN_SERVER_URL=https://your.vaultwarden.instance.com
# IMPORTANT: BW_PASSWORD (master password) is required for the client to 'bw unlock' the vault.
# The Vaultwarden client relies on 'bw login' having been performed manually once
# in the environment where the bot runs. BW_PASSWORD is then used for unlocking.
# API Key login (BW_CLIENTID/BW_CLIENTSECRET) is no longer used by this client.
# Ensure BW_PASSWORD is set in your environment.
# For security, consider using a more secure way to provide this if possible.
# BW_PASSWORD=YOUR_MASTER_PASSWORD_FOR_VAULTWARDEN_CLI_USER

# Vaultwarden API specific credentials (for direct API calls, not CLI)
# These are for the new functionality to invite users directly via API.
VAULTWARDEN_API_USERNAME=your_vaultwarden_api_user_email
VAULTWARDEN_API_PASSWORD=your_vaultwarden_api_user_password
